{-# STDLIB_VERSION 4 #-}
{-# CONTENT_TYPE EXPRESSION #-}
{-# SCRIPT_TYPE ACCOUNT #-}

let tf = sigVerify(tx.bodyBytes, tx.proofs[0], tx.senderPublicKey)
# in real world additional data must verify second signature
let additionalData = size(tx.proofs) >= 3 && toUtf8String(tx.proofs[1]) == "hash" && toUtf8String(tx.proofs[2]) == "sign"
let result = tf && additionalData

if (result) then
    true
else
    throw("second sign is required")